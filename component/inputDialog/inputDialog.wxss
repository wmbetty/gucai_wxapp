/* component/inputDialog/inputDialog.wxss */
.gc-modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.gc-modal-dialog {
    width:620rpx;
    overflow:hidden;
    position:fixed;
    top:50%;
    left:0;
    z-index:9999;
    background:#fff;
    margin:-310rpx 60rpx;
    border-radius:15rpx;
    /*height:360rpx;*/

}

.gc-modal-title {
    padding-top:50rpx;
    font-size:36rpx;
    color:#000;
    text-align:left;
    padding-left:54rpx;

}

.gc-modal-content {
    padding: 42rpx 54rpx 38rpx;
}

.gc-modal-input {
    display: flex;
    background: #fff;
    border: 1rpx solid #dedede;
    font-size: 34rpx;
    width:514rpx;
    height:90rpx;
    background:rgba(248,248,248,1);
    border-radius: 4rpx;
}


.gc-dialog-input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

input-holder {
    color: #999;
    font-size: 28rpx;
}

.gc-modal-footer {
    display: flex;
    flex-direction: row;
    /*height: 86rpx;*/
    border-top: 1px solid #eee;
    font-size: 32rpx;
    /*line-height: 86rpx;*/
    padding: 34rpx 0;
}

.dialog-btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #eee;
}

.dialog-btn-confirm {
    width: 50%;
    color: #325782;
    text-align: center;
}