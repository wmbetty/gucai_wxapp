/* component/goodsSimple/goodsSimple.wxss */
.goods-list{background: #fff;margin-bottom: 60rpx;}
.goods-list_header{
    display: block;
    color: #666;
    font-size: 28rpx;
    background: #F6F6F6;
    padding: 26rpx 0;
}
.goods-list_header text{
    border-left: 8rpx solid #1a1a1a;
    padding: 0 37rpx;
}
.goods-list-item{
    display: flex;
}
.goods-list-item-media{
    width: 165rpx;
    height: 165rpx;
    position: relative;
    margin-right: 22rpx;
    flex-shrink: 0;
    flex-wrap: nowrap;
    align-items: flex-start;
}
.goods-list-item-media image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.goods-list-item-inner{
    display: block;
    padding: 0 0.6rem 0 0;
    width: 100%;
    position: relative;
}
.goods-list-item_text{
    font-size: 28rpx;
    max-width: 100%;
}
.red-font{color: #FF3939;font-size: 28rpx;}
.goods-list-item-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;left: 0;
    right: 24rpx;
}
.goods-list-item-info .goods-list-item-text{margin: 0;}
.goods-list-item-right{
    max-width: 50%;
    position: relative;
    margin-left: 0.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 15px;
}
.operator-icon{
    width: 50rpx;
    height: 45rpx;
}
.operator-icon:first-child{
    margin-right: 0.2rem;
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100% 100%;
}
.operator-icon:last-child{
    margin-left: 0.2rem;
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100% 100%;
}
.goods-num{
    width: 60rpx;
    text-align: center;
}
