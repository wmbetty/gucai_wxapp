/* pages/myWallet/myWallet.wxss */
page{background: #F6F6F6;}
.balance-box{
  text-align: center;
  background: #1a1a1a;
  color: #fff;
  padding: 47rpx 0 58rpx;
}
.balance-title{
  font-size: 30rpx;
  color: #999;
}
.current-balance{
  padding: 47rpx 0 57rpx;
  font-size: 64rpx;
}
.balance-btn{
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  border: 1px solid #999;
    width:148rpx;
    height:48rpx;
    line-height: 48rpx;
    border-radius: 38rpx
}
.balance-btn:first-child{margin-right: 42rpx;}
.balance-btn:last-child{margin-left: 42rpx;}
.balance-head{
    font-size: 30rpx;
    padding: 20rpx 32rpx;
    background: #f6f6f6;
    color: #666;letter-spacing: 1px;
}
.group-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    background-color: white;
    border-bottom: 1px solid #ddd;
}
.group-item_title{
    padding-left: 6rpx;
    font-size: 30rpx;letter-spacing: 1px;
    margin-bottom: 20rpx;color: #000;
}
.balance-item{
    width: 100%;position: relative;
    padding: 32rpx 30rpx 25rpx;
}
.group-item:last-child{border: none;}
.balance-money-cont{
    position: absolute;
    right: 20rpx;
    top: 7%;
}
.small-font{
  font-size: 24rpx;padding-left: 6rpx;color: #888;
}
.c-money{margin: 20rpx 0 20rpx;font-size: 30rpx;color: #000;}
.no-balance-box{
    padding: 10px 0;
    text-align: center;
    font-size: 16px;
}
.scroll-view{height: 320px;overflow-y: auto;}
.no-show{display: none;}
.loading{
    padding: 20rpx 0;
    text-align: center;
    font-size: 30rpx;color: #999;
}
