/* pages/search/search.wxss */
.search-input-container{
    display: flex;
    justify-content: space-between;
    background: #f5f5f5;
    color: #666;
    font-size: 15px;
    text-align: center;
    width: 715rpx;
    margin: 20rpx auto;
    border-radius: 4px;
    height: 80rpx;
    line-height: 80rpx;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 36rpx;
    background-position: 28rpx 24rpx;
}
.search-input{
    display: inline-block;
    width: 400rpx;
    height: 100%;
    line-height: 100%;text-align: left;
    font-size: 32rpx;
    margin-left: 86rpx;
}
.search-close-icon{
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center;
    width: 34rpx;height: 34rpx;
    margin: 24rpx 20rpx;
}
.search-list-item{
    display: flex;
}
.search-list-item-media{
    width: 4.6rem;
    height: 5rem;
    position: relative;
    padding: 0.5rem 0.4rem 0;
    flex-shrink: 0;
    flex-wrap: nowrap;
    align-items: flex-start;
}
.search-list-item-media image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.search-list-item-inner{
    display: block;
    padding: 0.5rem 0.6rem 0 0;
    width: 100%;
}
.search-list-item-text{
    font-size: 30rpx;
    max-width: 100%;
    margin: 6px 0;
}
.red-font{color: #FF3939;}
.search-list-item-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 36rpx;
}
.search-list-item-info .search-list-item-text{margin: 0;}
.goods-list-item-right{
    max-width: 50%;
    position: relative;
    margin-left: 0.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 15px;
}
.operator-icon{
    width: 26px;
    height: 22px;
    border-radius: 4px;
    text-align: center;
    line-height: 100%;
    background: #fff;
    border: 1px solid #ccc;
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
}
.operator-icon:first-child{
    margin-right: 0.2rem;
}
.operator-icon:last-child{
    margin-left: 0.2rem;
}
.goods-num{
    width: 60rpx;
    text-align: center;
}
.goods-foot{
    position: fixed;left:0;bottom: 0;width: 100%;height: 96rpx;
    background: #fff;z-index: 999;
    display: flex;justify-content: space-between;
    box-shadow: 0 -3px 3px #f5f5f5;
}
.order-confirm-btn{
    width: 250rpx;height: 100%;
    background: #FF3939;color: #fff;font-size: 32rpx;
    text-align: center;line-height: 96rpx;
}
.cart-cont{position: relative;}
.cart-icon{
    display: block;
    width: 95rpx;height: 95rpx;
    margin: -20rpx 0 0 26rpx;
}
.cart-count{
    position: absolute;top:0;right: -3rpx;
    background: #FF3939;color: #fff;
    width: 36rpx;height: 36rpx;border-radius: 50%;
    text-align: center;line-height: 30rpx;font-size: 26rpx;
}
.no-goods{
    font-size: 30rpx;color: #333;padding-top: 20rpx;text-align: center;
}