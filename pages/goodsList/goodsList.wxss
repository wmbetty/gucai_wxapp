/* pages/goodsList/goodsList.wxss */
  /* page{background: #f6f6f6;}  */
.main-page{
    background: #f5f5f5;
}
.goods-tab_header{
    display: flex;
    color: #333;
    background: #fff;
    box-shadow:  0 3px 3px #f5f5f5;
}
.goods-tab-item-wrapper{
     padding: 0 100rpx; 
    text-align: center;
    display: block;
    flex: 1;
    font-size: 30rpx;
}
.goods-tab-item{
    padding: 24rpx 0;
}
.goods-tab-active{border-bottom: 3px solid #1a1a1a;}
.goods-categorys{
    display: flex;
    width: 100%;
    height: 100%;
    background: #fff;
    padding-bottom: 140rpx;
    margin-top: 2px;
}
.tab-pannel-left{
    width: 200rpx;
}
.tab-pannel-right{
    flex: auto;
}
.goods-list-item{
    padding: 12px 0;
    font-size: 28rpx;color: #666;
    text-align: center;
    border-left: 6px solid #fff;
}
.goods-list-item-active{
    border-left: 6px solid #1a1a1a;
    color: #000;
}
.search-input{
    display: block;
    background: #f5f5f5;
    color: #666;
    font-size: 15px;
    text-align: center;
    width: 500rpx;
    margin: 10px auto 0;
    border-radius: 4px;
    height: 30px;
    line-height: 30px;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 37rpx;
    background-position: 170rpx 12rpx;
}
.current-lot-wrapper{padding-top: 14rpx;}
.current-lot_text{font-size: 26rpx;padding: 0 12px;color: rgba(50,87,130,1);margin-top: 8rpx;}
.goods-list-container{margin-top: 44rpx;}
.goods-foot{
    position: fixed;left:0;bottom: 0;width: 100%;height: 96rpx;
    background: #fff;z-index: 999;
    display: flex;justify-content: space-between;
    box-shadow: 0 -3px 3px #f5f5f5;
}
.order-confirm-btn{
    width: 250rpx;height: 100%;
    background: #FF3939;color: #fff;font-size: 32rpx;
    text-align: center;line-height: 96rpx;
}
.cart-cont{position: relative;}
.cart_icon{
    display: block;
    width: 95rpx;height: 95rpx;
    margin: -20rpx 0 0 26rpx;
}
.cart_count{
    position: absolute;top:0;right: -3rpx;
    background: #FF3939;color: #fff;
    width: 36rpx;height: 36rpx;border-radius: 50%;
    text-align: center;line-height: 30rpx;font-size: 26rpx;
}
.no-goods{
    font-size: 30rpx;color: #333;padding-top: 20rpx;text-align: center;
}
.record-tab-pannel{position: fixed;height: 100%;width: 100%;background: #f6f6f6;margin-top: 2px;}
.no-records{
    text-align: center;font-size: 32rpx;
    padding: 20rpx 0;
    color: #333;
}