/* pages/goodsList/goodsList.wxss */
  /* page{background: #f6f6f6;}  */
.main-page{
    background: #f5f5f5;
}
.goods-tab-header{
    display: flex;
    color: #333;
    background: #fff;
}
.goods-tab-item-wrapper{
     padding: 0 100rpx; 
    text-align: center;

    display: block;
    flex: 1;
    font-size: 32rpx;
}
.goods-tab-item{
    padding: 24rpx 0;
}
.goods-tab-active{border-bottom: 3px solid #1a1a1a;}
.goods-categorys{
    display: flex;
    width: 100%;
    height: 100%;
    background: #fff;
    margin-top: 10rpx;
    padding-bottom: 140rpx;
}
.tab-pannel-left{
    width: 200rpx;
}
.tab-pannel-right{
    flex: auto;
}
.goods-list-item{
    padding: 12px 0;
    font-size: 30rpx;color: #666;
    text-align: center;
    border-left: 6px solid #fff;
}
.goods-list-item-active{
    border-left: 6px solid #1a1a1a;
    color: #000;
}
.right-list-item{
    display: flex;
}
.right-list-item-media{
    width: 4.6rem;
    height: 5rem;
    position: relative;
    padding: 0.5rem 0.4rem 0;
    flex-shrink: 0;
    flex-wrap: nowrap;
    align-items: flex-start;
}
.right-list-item-media image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.right-list-item-inner{
    display: block;
    padding: 0.5rem 0.6rem 0 0;
    width: 100%;
}
.right-list-item-text{
    font-size: 30rpx;
    max-width: 100%;
    margin: 6px 0;
}
.red-font{color: #FF3939;}
.right-list-item-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
}
.right-list-item-info .right-list-item-text{margin: 0;}
.goods-list-item-right{
    max-width: 50%;
    position: relative;
    margin-left: 0.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 15px;
}
.operator-icon{
    width: 26px;
    height: 22px;
    border-radius: 4px;
    text-align: center;
    line-height: 100%;
    background: #fff;
    border: 1px solid #ccc;
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
}
.operator-icon:first-child{
    margin-right: 0.2rem;
}
.operator-icon:last-child{
    margin-left: 0.2rem;
}
.goods-num{
    width: 60rpx;
    text-align: center;
}
.search-input{
    display: block;
    background: #f5f5f5;
    color: #666;
    font-size: 15px;
    text-align: center;
    width: 500rpx;
    margin: 10px auto 0;
    border-radius: 4px;
    height: 30px;
    line-height: 30px;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 37rpx;
    background-position: 170rpx 12rpx;
}
.current-lot-wrapper{padding-top: 14rpx;}
.current-lot-text{font-size: 28rpx;padding: 0 12px;color: #325782;margin-top: 8rpx;}
.record-list-item-info{
    display: flex;
    justify-content:space-between;
    align-items: center;
    font-size: 14px;
    margin-top: 20rpx;
}
.record-goods-list{
    font-size: 13px;
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    height: 32rpx;
}
.goods-foot{
    position: fixed;left:0;bottom: 0;width: 100%;height: 110rpx;
    background: #fff;z-index: 999;
    display: flex;justify-content: space-between;
    box-shadow: 0 -3px 3px #f5f5f5;
}
.order-confirm-btn{
    width: 250rpx;height: 100%;
    background: #FF3939;color: #fff;font-size: 34rpx;
    text-align: center;line-height: 110rpx;
}
.cart-cont{position: relative;}
.cart-icon{
    display: block;
    width: 110rpx;height: 110rpx;
    margin: -20rpx 0 0 26rpx;
}
.cart-count{
    position: absolute;top:-3px;right: -6px;
    background: #FF3939;color: #fff;
    width: 42rpx;height: 42rpx;border-radius: 50%;
    text-align: center;line-height: 42rpx;font-size: 30rpx;
}
.no-goods{
    font-size: 30rpx;color: #333;padding-top: 20rpx;text-align: center;
}
.record-tab-pannel{position: fixed;height: 100%;width: 100%;background: #f6f6f6;}
.record-list-item{background: #fff;margin-bottom: 22rpx;border-top: 1px solid #ddd;border-bottom: 1px solid #ddd;padding-bottom: 14rpx;}
.record-list-item:first-child{border-top: none;}
.r-split-line{width: 100%;height: 10rpx;background: #F6F6F6;}
.color-888{color: #888;}
.send-text{font-size: 24rpx;margin-left: 20rpx;color: #325782;border: 1px solid #325782;padding: 0 4px;border-radius: 4px;}
.no-records{
    text-align: center;font-size: 32rpx;
    padding: 20rpx 0;
    color: #333;
}