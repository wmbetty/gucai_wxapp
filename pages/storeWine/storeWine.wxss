/* pages/orderRoom/orderRoom.wxss */
page{
  background: #f6f6f6;
}
.group-wrapper{
    /* background: #f6f6f6; */
}
.group-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    background-color: white;
    padding: 22rpx 0;
    margin: 0 0 0 30rpx;
}
.group-item.no-padding{padding: 0;}
.group-item-title{
    font-size: 30rpx;
    color: #333;
    width: 100%;
}
.group-item-title input{
  padding: 22rpx 0
}
.right-item{
    position: absolute;
    display: flex;
    right: 16px;
    font-size: 14px;
    top:8px;
}
.right-item picker{display: inline-block;}
.right-item picker:last-child{margin-left: 6px;}
.right-item .text-right{text-align: right;}
.small-put{
    text-align: center;
    width: 30px;
}
.operator-icon{
    width: 26px;
    height: 22px;
    border-radius: 4px;
    font-size: 36rpx;
  text-align: center;
  line-height: 22px;
  background: #fff;
  border: 1px solid #ccc;
}
.operator-icon:first-child{
  margin-right: 3px;
}
.operator-icon:last-child{
  margin-left: 3px;
}
.room-head{
    padding: 8px 10px 12px 10px;
    background: #000;color: #fff;
    margin-bottom: 14px;
    font-size: 16px;
}
.room-head text{margin-bottom: 8px;display: block;}
.room-info-title{
    font-size: 14px;
}
.order-submit-btn{
    width: 75%;
    font-size: 30rpx;
    margin: 50px auto 20px;
    background: #1a1a1a;color: #fff;
    padding: 4px 14px;
}
.more-arrow-item{
    flex: 1;
}
.right-arrow{
    background-image: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    width: 14rpx;
    height: 25rpx;
    margin: 14px 0 0 12px;
    transform:translateY(-50%);
}
.wrapper-list{
    margin-bottom: 8px;
    background: #fff;color: #333;
}
.phcolor{font-size: 14px;}
.infos-item{
  width: 100%;
}
.infos-item input{width: 100%;}
.pic-add_icon{
    display: block;
    width: 210rpx;
    height: 210rpx;
    padding: 8px;
    margin-bottom: 4px;
    border-radius: 8px;
}
.picsWrapper{
    padding: 4px 10px 14px;
    color: #949494;font-size: 28rpx;
}
.no-pic-wrapper{display: inline-block;}
.upload-pic-text{padding: 0 40rpx;}
.had-border-bottom{
  border-bottom: 1px solid #ddd;
}
.pic-item{
    display: flex;
}
.img-outer{
    display: inline-block;
    width: 220rpx;height: 220rpx;
    margin-right: 11px;
    position: relative;
}
.upload-container image{
  display: block;
    width: 100%;height: 100%;
}
.img-outer:last-child{
  margin-right: 0;
}
.close-img_icon{
    position: absolute;
    top: -8px;right: -8px;
    width: 46rpx;
    height: 46rpx;
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100% 100%;
}