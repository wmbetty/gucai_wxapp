/* pages/orderRoom/orderRoom.wxss */
page{background: #f6f6f6;padding-bottom: 30rpx;}
.group-wrapper{
    margin-top: 20rpx;
    background: #fff;
}
.group-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    padding: 30rpx 12rpx;
    padding-right: 0;
    border-bottom: 1px solid #DDDDDD;
    margin-left: 26rpx;
}
.group-item:last-child{border:none;}
.group-item-title{
    font-size: 30rpx;
}
.o-star_text{color: #FF3939;font-size: 32rpx;}
.right-item{
    position: absolute;
    display: flex;
    right: 20px;
    font-size: 30rpx;
    top:14px;
}
.right-item picker{display: inline-block;}
.right-item picker:last-child{margin-left: 6px;}
.right-item .text-right{text-align: right;}
.small-put{
    text-align: center;
    width: 30px;
}
.operator-icon{
  width: 26px;
  height: 22px;
  border-radius: 4px;
    font-size: 36rpx;
  text-align: center;
  line-height: 100%;
  background: #fff;
  border: 1px solid #ccc;
}
.operator-icon:first-child{
  margin-right: 3px;
}
.operator-icon:last-child{
  margin-left: 3px;
}
.room-info-content{background: #fff;font-size: 30rpx;}
.room-info-content view{padding: 30rpx 0 30rpx 10rpx;border-bottom: 1px solid #ddd;margin-left: 26rpx;}
.room-info-content view:last-child{border-bottom: none;}
.room-head{
    padding: 18rpx 26rpx;
    font-size: 30rpx;color: #666;
}
.order-submit-btn{
    width: 70%;
    padding: 4px 0;
    background: #1a1a1a;color: #fff;
    font-size: 15px;
    margin: 40px auto 20px;
}