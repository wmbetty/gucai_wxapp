/* pages/orderConfirm/orderConfirm.wxss */
page{background: #f6f6f6;}
.order-main{padding-bottom: 80px;}
.order-head{
    display: flex;
    padding: 10px 18px;
    font-size: 30rpx;color: #333;
    border-bottom: 1px solid #ddd;
    background: #fff;
}
.order-head_icon{
    display: inline-block;
    width: 34px;
    height: 34px;
    border-radius: 3px;
}
.order-head_text{padding: 6px 10px;}
.order-goods-list{padding: 10px 18px;
    background: #ddd;
    font-size: 15px;
    border-bottom: 1px solid #f1f1f1;
}
.goods-count{padding-right: 26px;}
.goods-infos{display: flex;justify-content: space-between;}
.goods-infos-item{font-size: 13px;margin-top: 4px;}
.order-goods-total{display: flex;justify-content: space-between;padding: 14px 18px 10px;font-size: 30rpx;background: #fff;}
.red-font{color: #FF3939;}
.pay-title{border-bottom: 1px solid #ddd;padding-bottom: 10px;}
.order-pay-wrapper{background: #fff;padding: 14px 0 0 18px;margin-top: 14px;font-size: 14px;}
.paychannel-list-item{
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    align-items: center;
    padding: 6px 18px 8px 0;
    border-bottom: 1px solid #ddd;
}
.paychannel-list{padding: 10px 0 10px 0;}
.paychannel-list-left{display: flex;}
.paychannel-icon{
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
}
.wallet-icon{height: 46rpx;}
.paychannel-text{
    padding: 0 8px;
}
.color-888{color: #888;}
.paychannel-name{font-size: 30rpx;color: #000;}
.pay-nobalance{
    padding: 0 8px;
}
.radio-group{width: 100%;}
.order-confirm-btn{
    position: fixed;
    bottom: 0;left: 0;
    width: 100%;
    padding: 14px 0;
    text-align: center;
    font-size: 15px;
    background: #1a1a1a;color: #fff;
}
.paychannel-list-item:last-child{margin-bottom: 0;border-bottom: 0;}
.order-goods-cont{
    background: #fff;
    padding-left: 24rpx;
}
.order-list-item{
    display: flex;
    border-bottom: 1px solid #ddd;
    padding-bottom: 14rpx;
}
/*.order-list-item:last-child{*/
/*border-bottom: none;*/
/*}*/
.goods-count-text{font-size: 30rpx;}
.goods-remark{font-size: 24rpx;color: #888;}
.order-list-item-media{
    width: 4.6rem;
    height: 5rem;
    position: relative;
    padding: 0.5rem 0.4rem 0;
    flex-shrink: 0;
    flex-wrap: nowrap;
    align-items: flex-start;
}
.order-list-item-media image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.order-list-item-inner{
    display: block;
    padding: 0.5rem 0.6rem 0 0;
    width: 100%;
}
.order-list-item-text{
    font-size: 30rpx;
    max-width: 100%;
    margin: 6px 0;
}
.red-font{color: #FF3939;}
.order-list-item-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30rpx;
}
.order-list-item-info .order-list-item-text{margin: 0;}