/* pages/exchangeRecords/exchangeRecords.wxss */
page{
    background: #F6F6F6;
}
.group-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    background-color: white;
    border-bottom: 1px solid #e5e5e5;
}
.group-item:last-child{
    border-bottom: none;
}
.group-item-title{
    padding-left: 26rpx;
    font-size: 32rpx;color: #000;
    margin-bottom: 4px;
}
.balance-item{
    width: 100%;position: relative;
    padding: 26rpx 20rpx;
}
.balance-money-cont{
    position: absolute;
    right: 20rpx;
    top: 20%;
}
.small-font{
    font-size: 26rpx;color: #888;
    padding-left: 26rpx;
    margin-top: 20rpx;
}
.c-money{margin: 4px 0;}
.no-balance-box{
    padding: 10px 0;
    text-align: center;
    font-size: 16px;
}
.scroll-view{position: absolute;top:0;left:0;width: 100%;height: 100%;}
.no-show{display: none;}
.loading{
    padding: 10rpx;
    text-align: center;
    font-size: 16px;
}
.loading:before{
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    /*background: url(../../images/icon-loading.png) no-repeat;*/
    background-size: contain;
    animation: rotate 1s linear infinite;
}
.loading.complete:before{
    display: none;
}