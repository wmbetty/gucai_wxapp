/* pages/cart/cart.wxss */
.cart-head{
    display: flex;
    font-size: 14px;
    /*text-align: center;*/
}
.cart-left-item{
    display: block;
    flex: 1;
}
.left-item{
    margin-left: 8px;
    padding-left: 4px;
    border-left: 4px solid #ccc;
}
.right-item{
    text-align: right;
    padding-right: 20px;
}
.cart-goods-wrapper{
    display: flex;
    text-align: center;
    color: #999;
    font-size: 14px;
    margin-top: 10px;
    padding: 0 20px;
}
.cart-goods-item{
    display: flex;
    flex: 1;
    font-size: 16px;
    /*margin: auto;*/
}
/*.text-center{text-align: center;}*/
.inline-item{
    display: inline-block;
}
.small-put{
    text-align: center;
    height: 22px;
    width: 30px;
    margin-top: -3px;
}
.operator-icon{
    width: 20px;
    height: 20px;
    border-radius: 50%;
    text-align: center;
    line-height: 20px;
    background: #fff;
    border: 1px solid #ccc;
}
.operator-icon:first-child{
    margin-right: 3px;
}
.operator-icon:last-child{
    margin-left: 3px;
}
.sed-item{padding: 0 0 0 14%;}
.thd-item{padding: 0 0 0 10%;}
.first-item{height: 60px;position:relative;}
.goods-remark-btn{position:absolute;top:30px;padding: 6px 18px;background: #333;color: #fff;font-size: 14px;border-radius: 3px;left: 8px;}
.goods-sum-wrapper{display: flex;}
.goods-sum-wrapper{padding: 6px 56px 0 22px;font-size: 14px;}
.text-right{text-align: right;}
.cart-foot{
    position: absolute;bottom: 0;left: 0;background: #ccc;
    width: 100%;height: 60px;
    display: flex;
    font-size: 14px;
}
.cart-foot-left{
    width: 60%;
}
.cart-foot-right{
    flex: auto;
    background: #333;
    color: #fff;
    text-align: center;line-height: 60px;
}
